(lang dune 3.4)
(using menhir 2.0)

(name opeg)

(generate_opam_files true)

(source
 (github nikolaushuber/opeg))

(authors 
  "Nikolaus Huber"
)

(maintainers 
  "Nikolaus Huber"
)

(license MIT)

(documentation https://github.com/nikolaushuber/opeg)

(version 0.2)

(package
 (name opeg)
 (synopsis "PEG parser generator")
 (description "PEG parser generator for OCaml")
 (depends ocaml dune opegLib yojson atdgen)
 (tags
  (compiler parsing)))

(package 
  (name opeg_server)
  (synopsis "A Json-RPC server for Opeg")
  (depends ocaml dune opeg yojson atdgen ppx_deriving_rpc zmq)
  (tags 
    (compiler parsing server rpc json)))

